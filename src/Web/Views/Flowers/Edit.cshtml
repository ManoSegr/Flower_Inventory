@model FlowerShop.Domain.Flower
@{
    ViewData["Title"] = "Edit Flower";
}

<h1>Edit Flower</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="FlowerId" />
    <input type="hidden" asp-for="RowVersion" />

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SKU" class="form-label"></label>
                        <input asp-for="SKU" class="form-control" />
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <input asp-for="CategoryId" class="form-control" />
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                        
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label"></label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" inputmode="decimal" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="QuantityInStock" class="form-label"></label>
                            <input asp-for="QuantityInStock" class="form-control" />
                            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Color" class="form-label"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StemLengthCm" class="form-label"></label>
                            <input asp-for="StemLengthCm" class="form-control" inputmode="decimal" />
                            <span asp-validation-for="StemLengthCm" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Active" class="form-check-input" />
                        <label asp-for="Active" class="form-check-label"></label>
                    </div>
                </div>

                <div class="card-footer d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <strong>Image</strong>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-2">
                            <img src="@Model.ImageUrl" style="max-width:100%;border-radius:8px;" />
                        </div>
                        <form asp-action="DeleteImage" asp-route-id="@Model.FlowerId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-image"></i> Delete Image
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-muted mb-2">No image uploaded</div>
                    }
                    <div class="mt-2">
                        <label class="form-label">Replace Image</label>
                        <input type="file" name="imageFile" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}