@model FlowerShop.Domain.Flower
@{
    ViewData["Title"] = "Create Flower";
}

<h1>Create Flower</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SKU" class="form-label"></label>
                        <input asp-for="SKU" class="form-control" />
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.CategoryOptions" class="form-select">
                            <option value="">-- select --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label"></label>
                        <input asp-for="Type" class="form-control" placeholder="Cut, Potted, Bouquet" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" inputmode="decimal" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="QuantityInStock" class="form-label"></label>
                            <input asp-for="QuantityInStock" class="form-control" />
                            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Color" class="form-label"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StemLengthCm" class="form-label"></label>
                            <input asp-for="StemLengthCm" class="form-control" inputmode="decimal" />
                            <span asp-validation-for="StemLengthCm" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Active" class="form-check-input" />
                        <label asp-for="Active" class="form-check-label"></label>
                    </div>
                </div>

                <div class="card-footer d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <strong>Image</strong>
                </div>
                <div class="card-body">
                    <div class="mb-2 text-muted">Upload an optional image</div>
                    <input type="file" name="imageFile" class="form-control" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}