
@model FlowerShop.Domain.Category
@{
    ViewData["Title"] = "Category Details";
    var flowerCount = Model.Flowers?.Count ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div class="btn-group" role="group">
        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-outline-danger">
            <i class="fas fa-trash"></i> Delete
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Category Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <em class="text-muted">No description provided</em>
                        }
                    </dd>

                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")</dd>

                    <dt class="col-sm-3">Flowers:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary">@flowerCount flower@(flowerCount != 1 ? "s" : "")</span>
                    </dd>
                </dl>
            </div>
        </div>

        @if (Model.Flowers?.Any() == true)
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Flowers in this Category</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var flower in Model.Flowers.Take(10))
                                {
                                    <tr>
                                        <td>@flower.Name</td>
                                        <td>@flower.Price.ToString("C")</td>
                                        <td>@flower.QuantityInStock</td>
                                        <td>
                                            @if (flower.Active)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Flowers" asp-action="Details" 
                                               asp-route-id="@flower.FlowerId" class="btn btn-sm btn-outline-primary">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.Flowers.Count > 10)
                    {
                        <p class="text-muted mt-2">
                            Showing first 10 of @Model.Flowers.Count flowers.
                            <a asp-controller="Flowers" asp-action="Index" asp-route-categoryId="@Model.CategoryId">
                                View all flowers in this category
                            </a>
                        </p>
                    }
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Flowers" asp-action="Create" asp-route-categoryId="@Model.CategoryId" 
                       class="btn btn-outline-primary">
                        <i class="fas fa-plus"></i> Add Flower to Category
                    </a>
                    <a asp-controller="Flowers" asp-action="Index" asp-route-categoryId="@Model.CategoryId" 
                       class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> View All Flowers
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Categories
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>